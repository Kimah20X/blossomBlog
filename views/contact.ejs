<div class="container">
    <div class="contact-page">
        <div class="contact-card">
            <div class="card-header">
                <div class="icon-wrapper">
                    <svg class="flower-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <circle cx="12" cy="12" r="2.8"/>
                    </svg>
                </div>
                <h1 class="card-title">Get in Touch</h1>
                <p class="card-description">Have a question or just want to say hi? Drop a message!</p>
            </div>
            
            <form action="/contact" method="POST" class="contact-form">
                <div class="form-group">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" id="name" name="name" class="form-input" placeholder="Your name" required>
                </div>
                
                <div class="form-group">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" id="email" name="email" class="form-input" placeholder="your.email@example.com" required>
                </div>
                
                <div class="form-group">
                    <label for="message" class="form-label">Message</label>
                    <textarea id="message" name="message" class="form-textarea" placeholder="Your message..." rows="6" required></textarea>
                </div>
                
                <button type="submit" class="submit-btn">Send Message</button>
            </form>
        </div>
    </div>
</div>