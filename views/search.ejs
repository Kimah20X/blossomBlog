<div class="container">
    <div class="search-page">
        <div class="search-header">
            <h1 class="page-title">Search Results</h1>
            <% if (query) { %>
                <p class="search-info">
                    Found <%= posts.length %> result<%= posts.length !== 1 ? 's' : '' %> for "<%= query %>"
                </p>
            <% } else { %>
                <p class="search-info">Enter a search term to find posts</p>
            <% } %>
        </div>

        <form action="/search" method="GET" class="search-form-page">
            <input type="search" name="q" value="<%= query %>" placeholder="Search posts..." class="search-input-large">
            <button type="submit" class="search-btn-large">Search</button>
        </form>

        <% if (posts.length > 0) { %>
            <div class="posts-grid">
                <% posts.forEach(post => { %>
                    <%- include('partials/post-card', { post: post }) %>
                <% }) %>
            </div>
        <% } else if (query) { %>
            <div class="no-results">
                <p>No posts found matching your search. Try different keywords or <a href="/">browse all posts</a>.</p>
            </div>
        <% } %>
    </div>
</div>